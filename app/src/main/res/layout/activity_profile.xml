<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/container_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/container_profile"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="32dp">

        <TextView
            android:id="@+id/text_personal_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="79dp"
            android:text="Personal Profile"
            android:textColor="#0F8696"
            android:textSize="20sp"
            android:fontFamily="@font/urbanist_bold"/>

        <FrameLayout
            android:id="@+id/container_profile_image"
            android:layout_width="272dp"
            android:layout_height="298dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/container_frame3">

            <ImageView
                android:id="@+id/image_profile_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/image_frame"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/image_frame"/>
        </FrameLayout>

        <TextView
            android:id="@+id/text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginBottom="16dp"
            android:text="Name"
            android:textColor="#000000"
            android:textSize="16sp"
            android:fontFamily="@font/urbanist_bold"/>

        <TextView
            android:id="@+id/text_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:background="@drawable/container_frame6"
            android:paddingVertical="10dp"
            android:paddingHorizontal="16dp"
            android:text="Johan Liebert"
            android:textColor="#000000"
            android:textSize="14sp"
            android:fontFamily="@font/urbanist_regular"/>

        <TextView
            android:id="@+id/text_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginBottom="16dp"
            android:text="Email"
            android:textColor="#000000"
            android:textSize="16sp"
            android:fontFamily="@font/urbanist_bold"/>

        <TextView
            android:id="@+id/text_user_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:background="@drawable/container_frame8"
            android:paddingVertical="10dp"
            android:paddingHorizontal="16dp"
            android:text="johan.liebert@example.com"
            android:textColor="#000000"
            android:textSize="14sp"
            android:fontFamily="@font/urbanist_regular"/>

        <TextView
            android:id="@+id/text_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginBottom="16dp"
            android:text="Address"
            android:textColor="#000000"
            android:textSize="16sp"
            android:fontFamily="@font/urbanist_bold"/>

        <TextView
            android:id="@+id/text_user_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:background="@drawable/container_frame10"
            android:paddingVertical="10dp"
            android:paddingHorizontal="16dp"
            android:text="John Smith resides at Jalan Sudirman No. 123 city Jakarta, Indonesia. 12345."
            android:textColor="#000000"
            android:textSize="14sp"
            android:fontFamily="@font/urbanist_regular"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_logout"
            style="@style/MainButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="32dp"
            android:text="Logout"/>

    </LinearLayout>
</ScrollView>